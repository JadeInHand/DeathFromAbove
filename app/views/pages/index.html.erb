<% if @current_user && @current_user.present? %>
	<div id="gameContainer"></div>
	<div id="highscores">
		<h1>Highscores:</h1>
		<ul>
			<% @highscores.each do |highscore| %>
				<li><%= highscore.name.capitalize %> || <%= highscore.score %></li>
			<% end %>
		</ul>
	</div>
<% else %>
	<h2> Create new Player Account </h2>
	<div class="user-form">
		<%= form_for @user, :html => { :multipart => true } do |f| %>

  	<div class="field">
	    <%= f.label :name %>
	    <%= f.text_field :name %>
	    <%= f.submit %>
  	</div>
  	<% end %>
  </div>
		
  <%= form_tag '/login' do %>
		<h2>Login</h2>
		<hr>
		<div class="form-group">
		    <%= label_tag :name %>
		    <%= text_field_tag :name, nil %>
		    <%= submit_tag "Login" %>
		</div>
    
	<% end %>
<% end %>

